<form method="POST" action="/">
    <div class="form-group">
        <label for="item">Item</label>
        <input type="text" class="form-control" name="item" id="item" placeholder="Please select an item">
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="text" class="form-control" name="quantity" id="quantity" min="1" placeholder="Please enter the quantity">
    </div>

    <div class="form-group">
        <label for="unitPrice">Unit</label>
        <div class="input-group">
            <div class="input-group-prepend">
                 <span class="input-group-text">$</span>
            </div>
            <input type="text" name="unitPrice" id="unitPrice" class="form-control" placeholder="Cost per unit item">
        </div>
        
    </div>
    <div>
        <button type="submit" class="btn btn-primary mt-4 btn-block">Add to cart</button>
    </div>

    <input type="hidden" name="cartState" value="{{ cartState }}">


</form>

<table class="table mt-5">
    <thead class="thead-dark">
        <tr>
            <td>Item</td>
            <td>Quantity</td>
            <td>Unit Price</td>
        </tr>
    </thead>
    <tbody>
        {{#each cart}}
            <tr>
                <td>{{this.item}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.unitPrice}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>